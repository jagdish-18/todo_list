<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <h1 class="text-3xl font-bold text-gray-800 text-center mt-8">Register User Todo List</h1>

    <div class="max-w-5xl mx-auto mt-8 bg-white p-6 shadow-lg rounded-lg">
        <table class="w-full border-collapse">
            <thead>
                <tr class="bg-purple-500 text-white">
                    <th class="py-3 px-4 text-left">First Name</th>
                    <th class="py-3 px-4 text-left">Last Name</th>
                    <th class="py-3 px-4 text-left">Email</th>
                    <th class="py-3 px-4 text-left">Mobile No</th>
                    <th class="py-3 px-4 text-left">Age</th>
                    <th class="py-3 px-4 text-left">Department</th>
                    <th class="py-3 px-4"></th>
                </tr>
            </thead>

            <!-- Table Body -->
            <tbody>
                <% users.forEach(function(user) { %>
                    <tr class="hover:bg-gray-100 even:bg-gray-50">
                        <td class="py-3 px-4 text-gray-700"><%= user.firstName %></td>
                        <td class="py-3 px-4 text-gray-700"><%= user.lastName %></td>
                        <td class="py-3 px-4 text-gray-700"><%= user.email %></td>
                        <td class="py-3 px-4 text-gray-700"><%= user.mobileNo %></td>
                        <td class="py-3 px-4 text-gray-700"><%= user.age %></td>
                        <td class="py-3 px-4 text-gray-700"><%= user.department %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
